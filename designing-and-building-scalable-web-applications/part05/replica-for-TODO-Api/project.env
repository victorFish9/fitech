# Database configuration for PostgreSQL (running in container called "database-server")
POSTGRES_USER=postgres
POSTGRES_PASSWORD=Fallout4
POSTGRES_DB=fitech

# Database configuration for Flyway (used for database migrations)
FLYWAY_USER=postgres
FLYWAY_PASSWORD=Fallout4
FLYWAY_URL=jdbc:postgresql://todo-database-server:5433/fitech

# Database configuration for PostgreSQL driver
PGUSER=postgres
PGPASSWORD=Fallout4
PGHOST=localhost
PGPORT=5433
PGDATABASE=fitech

# Deno cache location (avoid reloading depedencies over and over)
DENO_DIR=/app-cache